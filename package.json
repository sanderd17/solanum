{
  "name": "solanum",
  "version": "0.0.2-alpha.2",
  "author": "Sander Deryckere",
  "license": "AGPL-3.0",
  "description": "Experimental Scada package",
  "repository": "https://github.com/sanderd17/solanum",
  "scripts": {
    "start": "node --experimental-modules solanum-demo/index.js",
    "inspect": "node --inspect index.js",
    "sample-server": "node tools/sample-server.js",
    "test": "node --experimental-modules --loader ./test/solanumTestLoader.mjs ./test/solanumTestRunner.js",
    "test-core-server": "node --experimental-modules --loader ./test/solanumTestLoader.mjs ./test/solanumTestRunner.js -d ./core-server",
    "test-core-client": "node --experimental-modules --loader ./test/solanumTestLoader.mjs ./test/solanumTestRunner.js -d ./core-client",
    "test-studio-server": "node --experimental-modules --loader ./test/solanumTestLoader.mjs ./test/solanumTestRunner.js -d ./studio-server",
    "test-studio-client": "mocha -r esm \"solanum-studio/test/public/**/*.js\"",
    "build": "tsc --build jsconfig.json",
    "high_latency_netw": "sudo tc qdisc add dev lo root netem delay 50ms # add 50 ms latency to localhost (lo)",
    "low_bandwidth_netw": "sudo tc qdisc add dev lo root netem rate 300kbit # limil localhost speed to 300kbit",
    "reset_netw": "sudo tc qdisc del dev lo root netem # RESET localhost to full speed"
  },
  "bin": {
    "solanum": "bin/solanum.js"
  },
  "engines": {
    "node": ">=12.10"
  },
  "dependencies": {
    "commander": "^3.0.2",
    "prompts": "^2.2.1"
  },
  "devDependencies": {
    "chalk": "^2.4.2",
    "flow-parser": "^0.108.0",
    "jsdom": "^15.1.1",
    "recast": "^0.18.2",
    "yargs": "^14.0.0"
  }
}
